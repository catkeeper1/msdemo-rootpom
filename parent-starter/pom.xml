    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.6.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>

                <configuration>

                    <systemPropertyVariables>
                        <coverage-output>serial</coverage-output>
                        <coverage-outputDir>${project.basedir}/target/coverage-data/</coverage-outputDir>
                        <coverage-metrics>line</coverage-metrics>
                        <coverage-srcDirs>${project.basedir}/src/main/java</coverage-srcDirs>
                        <!--<coverage-classes>loaded</coverage-classes>-->
                        <!--<coverage-check>80</coverage-check>-->
                    </systemPropertyVariables>

                </configuration>


            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-maven-plugin</artifactId>
                <version>3.5.3</version>
                <configuration>
                    <propertyFile>./setting/liquibase.properties</propertyFile>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <version>2.17</version>

                <dependencies>
                    <dependency>
                        <groupId>com.puppycrawl.tools</groupId>
                        <artifactId>checkstyle</artifactId>
                        <version>7.2</version>
                    </dependency>
                    <dependency>
                        <groupId>org.ckr.msdemo</groupId>
                        <artifactId>build-tool</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pmd-plugin</artifactId>
                <version>3.8</version>
                <dependencies>

                    <dependency>
                        <groupId>org.ckr.msdemo</groupId>
                        <artifactId>build-tool</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <targetJdk>1.8</targetJdk>
                    <rulesets>
                        <ruleset>org/ckr/msdemo/pmd/pmd.xml</ruleset>
                    </rulesets>
                    <printFailingErrors>true</printFailingErrors>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
            </plugin>




            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>findbugs-maven-plugin</artifactId>
                <version>3.0.4</version>
                <dependencies>
                    <dependency>
                        <groupId>io.springfox</groupId>
                        <artifactId>springfox-swagger2</artifactId>
                        <version>${swagger.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.springframework</groupId>
                        <artifactId>spring-core</artifactId>
                        <version>${spring.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-starter-data-jpa</artifactId>
                        <version>${springboot.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-starter-web</artifactId>
                        <version>${springboot.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.springframework.security.oauth</groupId>
                        <artifactId>spring-security-oauth2</artifactId>
                        <version>${spring-security-oauth.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.springframework.security</groupId>
                        <artifactId>spring-security-jwt</artifactId>
                        <version>${spring-security-jwt.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.springframework.cloud</groupId>
                        <artifactId>spring-cloud-starter-feign</artifactId>
                        <version>${spring.cloud.netflix.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.ckr.msdemo</groupId>
                        <artifactId>build-tool</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.ckr.msdemo</groupId>
                        <artifactId>exceptions</artifactId>
                        <version>${project.version}</version>
                    </dependency>

                </dependencies>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.10.4</version>
                <executions>

                    <execution>
                        <id>gen-liquebase-xml</id>
                        <phase>generate-resources</phase>

                        <configuration>
                            <doclet>org.ckr.msdemo.doclet.LiquiBaseDoclet</doclet>

                            <docletArtifacts>
                                <artifact>
                                    <artifactId>build-tool</artifactId>
                                    <groupId>org.ckr.msdemo</groupId>
                                    <version>${project.version}</version>
                                </artifact>
                            </docletArtifacts>
                            <useStandardDocletOptions>false</useStandardDocletOptions>
                            <skip>${msdemo.skipGenLiquibaseXml}</skip>
                            <!--<show>protected</show>-->
                            <docencoding>UTF-8</docencoding>
                            <encoding>UTF-8</encoding>
                            <charset>UTF-8</charset>
                            <!--<includeDependencySources>true</includeDependencySources>-->
                            <!--<dependencySourceIncludes>-->
                                <!--<dependencySourceInclude>org.ckr.msdemo:exceptions</dependencySourceInclude>-->
                            <!--</dependencySourceIncludes>-->
                            <additionalJOptions>
                                <additionalJOption>-J-Doutput=${project.build.directory}</additionalJOption>
                            </additionalJOptions>
                        </configuration>
                        <goals>
                            <goal>aggregate</goal>
                        </goals>
                    </execution>
                </executions>

            </plugin>

            <plugin>
                <groupId>ch.ifocusit.livingdoc</groupId>
                <artifactId>livingdoc-maven-plugin</artifactId>
                <version>1.2</version>
                <!--<executions>-->
                    <!--<execution>-->
                        <!--<id>class-diagram</id>-->
