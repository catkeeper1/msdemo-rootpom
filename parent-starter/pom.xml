                            <!--<jvmArg>-Xmx512m</jvmArg>-->
                        <!--</jvmArgs>-->
                    <!--</externalRunner>-->

                    <!--<testCasesDirectory>src/test/robot/</testCasesDirectory>-->
                <!--</configuration>-->
                <!--<executions>-->
                    <!--<execution>-->
                        <!--<goals>-->
                            <!--<goal>run</goal>-->
                        <!--</goals>-->
                    <!--</execution>-->
                <!--</executions>-->
                <dependencies>
                    <dependency>
                        <groupId>org.robotframework</groupId>
                        <artifactId>robotframework</artifactId>
                        <version>3.0.2</version>
                    </dependency>
                </dependencies>
            </plugin>

        </plugins>

